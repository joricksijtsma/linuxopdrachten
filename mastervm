echo "execute as root, otherwise it will not work!"


#prerequisites
sudo apt-get update
sudo apt-get install -y autoconf gcc libc6 make wget unzip apache2 php libapache2-mod-php7.0 libgd2-xpm-dev

#download and extract files
cd /tmp
wget -O nagioscore.tar.gz https://github.com/NagiosEnterprises/nagioscore/archive/nagios-4.3.4.tar.gz

if [ $? != 0 ]
then
  echo "er is iets fout gegaan, error code: " $?
  exit
fi
if [ $? == 0 ]
then
echo "tot nu toe werkt alles"
fi
# werkt tot hier.

tar xzf nagioscore.tar.gz

#compile the source
cd /tmp/nagioscore-nagios-4.3.4/
sudo ./configure --with-httpd-conf=/etc/apache2/sites-enabled
sudo make all

#create the user "nagios" and add this to the www-data group.
sudo useradd nagios
sudo usermod -a -G nagios www-data

#install binaries from the source
sudo make install

#installs nagios and that it starts at boot
sudo make install-init
update-rc.d nagios defaults

#configures the commandline
sudo make install-commandmode

#install the config files
sudo make install-config

#installs apache
sudo make install-webconf

#enables 2 modules that are required by nagios
sudo a2enmod rewrite
sudo a2enmod cgi

#creates the nagios admin account. the password is directly after nagiosadmin, since on the next line it will ask for a password.
sudo htpasswd -c /usr/local/nagios/etc/htpasswd.users nagiosadmin nagiosnagios
# hier moet het wachtwoord worden ingevuld!

#start apache and nagios
sudo systemctl restart apache2
sudo systemctl start nagios

#prerequisites for the nagios plugins
sudo apt-get install -y autoconf gcc libc6 libmcrypt-dev makelibssl-dev wget bc gawk dc build-essential snmp libnet-snmp-perl gettext

#download the source and extract it
cd /tmp
wget --no-check-certificate -O nagios-plugins.tar.gz https://github.com/nagios-plugins/nagios-plugins/archive/release2.2.1.tar.gz
tar zxf nagios-plugins.tar.gz

#compile and install nagios plugins
cd /tmp/nagios-plugins-release-2.2.1/
sudo ./tools/setup
sudo ./configure
sudo make
sudo make install

#restart nagios
sudo systemctl restart nagios

#NRPE installation, download source and extract it
cd /tmp
wget https://github.com/NagiosEnterprises/nrpe/releases/download/nrpe-3.2.1/nrpe-3.2.1.tar.gz
tar zxf nrpe-3.2.1.tar.gz

#compile and install NRPE
cd /tmp/nrpe-*
sudo ./configure
sudo make check_nrpe
sudo make install-plugin

#open nagios config file and change the following line
#sudo nano /usr/local/nagios/etc/nagios.cfg
#cfg_dir=/usr/local/nagios/etc/servers

#cd /usr/local/nagios/etc/nagios
#sed -i '51s/.*/cfg_dir=/usr/local/nagios/etc/servers/' /usr/local/nagios/etc/nagios.cfg
sed -i -e 's/#cfg_dir=/usr/local/nagios/etc/servers/cfg_dir=/usr/local/nagios/etc/servers/g' /usr/local/nagios/etc/nagios.cfg

#sudo nano /dir/nagios.conf

sudo nano /usr/local/nagios/etc/nagios.cfg

:'

#uncomment the above line with the comment in front of it

#save the config file and exit
ctrl+o , y , ctrl+q

#create the directory where we will store the config file for each monitored server
sudo mkdir /usr/local/nagios/etc/servers

#make/open the commands.cfg file and put the following command in.
sudo nano /usr/local/nagios/etc/object/commands.cfg

#dit invoegen(is een leeg bestand):

Define command{
 command_name check_nrpe
 command_line $USER1$/check_nrpe -H $HOSTADDRESS$ -c $ARG1$
}

#masterVM eindigt hier qua Nagios.
'
